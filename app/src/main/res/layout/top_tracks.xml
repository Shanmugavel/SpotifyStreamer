<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgAlbum"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_loading"
        android:contentDescription="@string/hint_album_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/hint_album_track_name"
        android:id="@+id/txtAlbumTrackName"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgAlbum"
        android:layout_toEndOf="@+id/imgAlbum"
        android:layout_marginLeft="10dp" />

</RelativeLayout>